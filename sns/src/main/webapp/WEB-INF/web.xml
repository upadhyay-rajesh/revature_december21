<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>sns</display-name>
	
	<servlet>
		<servlet-name>SnsAdminController</servlet-name>
		<servlet-class>com.controller.SnsAdminController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SnsUserController</servlet-name>
		<servlet-class>com.controller.SnsUserController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SnsAdminController</servlet-name>
		<url-pattern>/SnsAdminController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SnsUserController</servlet-name>
		<url-pattern>/SnsUserController</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		
		<welcome-file>homepage.jsp</welcome-file>
	</welcome-file-list>
</web-app>